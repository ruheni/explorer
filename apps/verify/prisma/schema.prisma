generator client {
  provider = "prisma-client-js"
}

enum VerificationStatus {
  FULL
  PARTIAL
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  directUrl         = env("POSTGRES_URL_NON_POOLING")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
}

model Verification {
  id                  Int      @id @default(autoincrement())
  contractAddress     String   @unique @db.VarChar(255)
  chainID             String
  isVerified          Boolean
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  verificationStatus  VerificationStatus
  uploadedUrl        String   
}

model Chain {
  id                Int             @id @default(autoincrement())
  name              String          @db.VarChar(255)
  title             String          @db.VarChar(255)
  chain             String          @db.VarChar(255)
  icon              String          @db.VarChar(255)
  rpc               String[]
  faucets           String[]
  nativeCurrency    NativeCurrency  @relation(fields: [nativeCurrencyId], references: [id])
  nativeCurrencyId  Int
  infoURL           String          @db.VarChar(2048)
  chainId           Int
  explorers         Explorer[]
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
}

model NativeCurrency {
  id        Int     @id @default(autoincrement())
  name      String  @db.VarChar(255)
  symbol    String  @db.VarChar(255)
  decimals  Int
  chain     Chain
}